<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.group15.shoppingwithfriends.ExtraCredit.Tutorial.TutorialActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tutorial"
        android:id="@+id/textViewTutorial"
        android:textColor="@color/material_deep_teal_200"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="30dp"
        android:gravity="center_horizontal"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login and Registration Help"
        android:id="@+id/button_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textViewTutorial"
        android:layout_alignRight="@+id/textViewTutorial"
        android:layout_alignEnd="@+id/textViewTutorial"
        android:onClick="goToLoginHelp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Help Adding and Deleting Friends"
        android:id="@+id/button_friends"
        android:layout_below="@+id/button_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/textViewTutorial"
        android:layout_alignEnd="@+id/textViewTutorial"
        android:onClick="goToFriendsHelp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Items Help"
        android:id="@+id/button_additem"
        android:layout_below="@+id/button_friends"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textViewTutorial"
        android:layout_alignEnd="@+id/textViewTutorial"
        android:layout_alignParentStart="false"
        android:onClick="goToItemsHelp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sales Help"
        android:id="@+id/button_sales"
        android:layout_below="@+id/button_additem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/textViewTutorial"
        android:layout_alignEnd="@+id/textViewTutorial"
        android:onClick="goToSalesHelp" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Map Help"
        android:id="@+id/button_map_help"
        android:layout_below="@+id/button_sales"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/textViewTutorial"
        android:layout_alignEnd="@+id/textViewTutorial"
        android:onClick="goToMapsHelp" />

</RelativeLayout>